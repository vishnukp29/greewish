<section>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/pot1.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h4 class="text-dark">“To forget how to dig the earth and tend the soil is to forget ourselves.”
                    </h4>
                    <h5 class="text-dark">-Mahatma Gandhi</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/pot2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h4>“Anyone who has time for drama is not gardening enough.”</h4>
                    <p>GreeWish</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/pot3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h4>“Gardening adds years to your life, and life to your years.”</h4>
                    <p>GreeWish</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>



<section>
    <nav class="navbar navbar-light mt-4" id="heading">
        <div class="container-fluid">
            <h2 class="navbar-text ml-5 text-white">
                Best Offers on Plants
            </h2>
        </div>
    </nav>
    <div class="container mt-3 p-3">
        <div class="row">
            {{#each plants}}
            <div class="col-md-3">
                <div class="card" style="width: 16rem; height:32rem">
                    <img src="{{this.Image}}" class="card-img-top" alt="..." style="width: 15rem; height:20rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">Earliest Delivery: {{this.Earliest_Delivery}}</p>
                        <h5 class="card-text">{{this.Price}}</h5>
                        <a href="/cart" class="btn btn-primary">Add To Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

