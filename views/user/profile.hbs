<!-- Section: Design Block -->
<section class="text-center text-lg-start mt-5">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4" >
    <div class="row g-0 align-items-center mt-3">
    {{#if user}}
      <div class="col-lg-6 mt-5 mb-lg-0 ">
        <div class="card cascading-right" style=" background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px);">
          <div class="card-body p-5 shadow-5 text-center ">
            <h2 class="fw-bold mb-5 text-success">Hello {{user.Name}}</h2>

            <form action="/profile/{{user._id}}" method="post">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="form-outline mb-3">
                <input type="text" id="form3Example1" class="form-control" name="Name" 
                placeholder="Name" required=" "  value="{{user.Name}}"/>
                
              </div>

              <div class="form-outline mb-3">
                <input type="number" id="form3Example3" class="form-control" name="Phone" 
                placeholder="Phone Number" required=" "  value="{{user.Phone}}"/>
                
              </div>

              <!-- Email input -->
              <div class="form-outline mb-3">
                <input type="email" id="form3Example3" class="form-control" name="Email" 
                placeholder="E Mail" required=" " value="{{user.Email}}"/>
                
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Update Profile
              </button>
            </form>
          </div>
        </div>
      </div>
    {{/if}}
      <div class="col-lg-6 mt-5 mb-lg-0">
        <h6 class="fw-bold text-secondary d-flex justify-content-center ">Welcome To</h6>
        <h1 class="fw-bold text-success d-flex justify-content-center ">GreeWish</h1>
        <img src="/images/login1.jpg" class="w-100 rounded shadow-4" alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->