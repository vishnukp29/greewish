<!-- Section: Design Block -->
<section class="text-center text-lg-start mt-5">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mt-5 mb-lg-0 ">
        <div class="card cascading-right" style=" background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px);">
          <div class="card-body p-5 shadow-5 text-center w-60">
            <h2 class="fw-bold mb-5 text-success">Sign up now</h2>

            <form action="/signup" method="post" id="signup">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="form-outline mb-3">
                <input type="text" id="form3Example1" class="form-control" placeholder="Name"
                name="Name" required=" "  />
              </div>

              <div class="form-outline mb-3">
                <input type="number" id="form3Example3" class="form-control" placeholder="Phone"
                 name="Phone" required=" " />
                
              </div>

              <!-- Email input -->
              <div class="form-outline mb-3">
                <input type="email" id="form3Example3" class="form-control" placeholder="E-Mail"
                 name="Email" required=" " />
              </div>

              <!-- Password input -->
              <div class="form-outline mb-3">
                <input type="password" id="form3Example4" class="form-control" placeholder="Password"
                 name="Password" required=" " />
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Sign up
              </button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mt-5 mb-lg-0">
        <h6 class="fw-bold text-secondary d-flex justify-content-center ">Welcome To</h6>
        <h1 class="fw-bold text-success d-flex justify-content-center ">GreeWish</h1>
        <img src="/images/login1.jpg" class="w-100 rounded shadow-4" alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->