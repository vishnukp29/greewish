<section>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {{#each carousel}}
            <div class="carousel-item active">
                <img class="d-block w-100" src="/ProductImages/{{this.bannerImages}}" alt="First slide">
            </div>
            {{/each }}
        </div>
        <button class="carousel-control-prev" type="button"  data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button"  data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
</section>


<section>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <h4 class="text-white mt-2">LATEST PRODUCTS</h4>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-4">


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle btn btn-outline-warning" href="#" id="navbarDropdown"
                            role="button" data-bs-toggle="dropdown" aria-expanded="false">Categories
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {{#each categories}}

                            <li><a class="dropdown-item "
                                    href="/product-categories/{{this._id}}">{{this.Categoryname}}</a></li>
                            {{/each}}

                        </ul>


                    </li>

                </ul>
                <form class="d-flex" action="/search" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                        name="Search">
                    <button class="btn btn-outline-warning" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-3 ">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3 d-flex justify-content-center">
                <div class="card" style="width: 16rem; height:28rem">
                    <a href="/view-product-details/{{this._id}}"><img src="/ProductImages/{{this.allImages.[0]}}"
                            class="card-img-top rounded mx-auto d-block p-2" alt="..." style=" height:17rem"></a>
                    <div class="card-body">
                        <h5 class="card-title">{{this.prdName}}</h5>
                        <p class="card-text">Earliest Delivery: {{this.Earliest_Delivery}}</p>
                        <h5 class="card-text">&#x20b9 {{this.Price}}</h5>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary"><i
                                class="fa fa-shopping-cart"></i> Add To Cart</a> --}}
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary"><i
                                class="fa fa-shopping-cart"></i> Add To Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>


